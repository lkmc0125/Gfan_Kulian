<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coinlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:layout_weight="1"
    android:background="@drawable/buy_money_item_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cointv"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="500金币"
            android:textColor="#595959"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical" >
                <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="2dip"
                android:layout_margin="2dip"
                android:orientation="vertical"
                >
					<RelativeLayout
					    android:id="@+id/money_new_layout"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:gravity="center_vertical"
		                android:orientation="horizontal" >
		                
		                <TextView
		                    android:id="@+id/moneytv"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="@string/five"
		                    android:layout_centerVertical="true"
		                    android:textColor="#2C78D4"
		                    android:textSize="18sp" />
		
		                <TextView
		                    android:id="@+id/moneyunittv"
		                    android:layout_width="wrap_content"
		                    android:layout_toRightOf="@+id/moneytv"
		                    android:layout_height="wrap_content"
		                    android:layout_centerVertical="true"
		                    android:text="@string/moneyunit"
		                    android:textColor="#595959"
		                    android:textSize="12sp" />
	                </RelativeLayout>

	                <RelativeLayout
	                    android:id="@+id/money_old_layout"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                   	android:layout_below="@+id/money_new_layout"
	                    android:orientation="horizontal" 
	                    android:gravity="center_vertical"
	                    >
						<View 
		                    android:layout_width="20dip"
		                    android:layout_height="1dip"
		                    android:layout_centerInParent="true"
		                    android:background="#FF4C00"
		                    />
	                    <TextView
	                        android:id="@+id/moneytv_old"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="@string/five"
	                        android:layout_centerVertical="true"
	                        android:textColor="#2C78D4"
	                        android:textSize="14sp" />

	                    <TextView
	                        android:id="@+id/moneyunittv_old"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_toRightOf="@+id/moneytv_old"
	                        android:layout_centerVertical="true"
	                        android:text="@string/moneyunit"
	                        android:textColor="#595959"
	                        android:textSize="10sp" />
	                </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/givecointv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="赠送金币"
            android:textColor="#C8E1FF"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/givecoinnumtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableRight="@drawable/goldcoin_small"
                android:gravity="center"
                android:text="500"
                android:textColor="#FF4C00"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- android:layout_centerVertical="true" -->

</LinearLayout>