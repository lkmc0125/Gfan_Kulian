<?xml version="1.0" encoding="utf-8"?>
<!-- added by albert liu 2016-3-27 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	    android:id="@+id/main_person_center_home_page_certification_mark_layout"
        android:layout_width="fill_parent"
		android:layout_height="75dip"
	    android:orientation="horizontal"
	    android:background="@drawable/app_task_item_bg_with_shadow"
	    android:baselineAligned="false"
        >
		<RelativeLayout 
			android:id="@+id/person_account_sign_in_layout" 
			android:layout_width="120dip" 
			android:layout_height="41dip"
			android:layout_marginLeft="15dip"
			android:layout_marginTop="17dip"
			android:layout_marginBottom="17dip"
			android:background="@null"
			android:orientation="vertical"
			>

               <TextView 
				android:id="@+id/person_account_sign_in_value_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/person_account_sign_in_value"
				android:textColor="#A5A5A5"
				android:textSize="12sp"
				android:singleLine="true"
                   />

            <RelativeLayout 
	            android:layout_width="wrap_content" 
	            android:layout_height="18dip"
	            android:layout_below="@id/person_account_sign_in_value_text"
	            android:layout_marginTop="8dip"
	            android:background="@null"
	            android:orientation="vertical"
	            >
	            <ImageView
	                android:id="@+id/person_account_sign_in_img" 
	                android:contentDescription="@null"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_centerVertical="true"
	                android:background="@drawable/calendar"
	                />
	           <TextView 
	               android:id="@+id/person_account_sign_in_text"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_marginLeft="5dip"
	               android:layout_gravity="center"
	               android:layout_centerVertical="true"
	               android:layout_toRightOf="@id/person_account_sign_in_img"
	               android:text="@string/person_account_sign_in_hint"
	               android:textColor="#2C78D4"
	               android:textSize="13sp"
	               />
            </RelativeLayout>
         </RelativeLayout>
		<LinearLayout 
		    android:layout_toRightOf="@+id/person_account_sign_in_layout"
		    android:orientation="horizontal"
		    android:id="@+id/divid_line"
        	android:layout_width="1dip"
        	android:layout_height="45dip"
        	android:layout_margin="15dip"
        	android:background="#e8e8e8"
        />
	     <RelativeLayout 
			android:id="@+id/person_account_gold_coins_layout" 
			android:layout_toRightOf="@+id/divid_line"
            android:layout_width="wrap_content" 
            android:layout_height="75dip"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:orientation="vertical"
            >

           <TextView
               android:id="@+id/main_home_person_center_coin_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:text="@string/person_account_gold_coins_hint"
               android:textColor="#333333"
               android:textSize="30sp" />

			<ImageView
			    android:id="@+id/main_home_person_center_coin_img"
                android:layout_marginTop="4dip"
                android:contentDescription="@null"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/main_home_person_center_coin_text"
                android:layout_marginLeft="5dip"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/goldcoin_small"
                />

         </RelativeLayout>
         <RelativeLayout 
			android:id="@+id/person_account_pay_gold_coins_layout" 
            android:layout_width="93dip" 
            android:layout_marginTop="10dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:background="#2c78d4"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:orientation="horizontal"
            >
			<ImageView
			    android:id="@+id/person_account_pay_gold_coins_img"
                android:layout_marginTop="4dip"
                android:contentDescription="@null"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:background="@drawable/but_purchase"
                />
             <TextView
                android:id="@+id/person_account_pay_gold_coins_text"
                android:layout_marginTop="4dip"
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginLeft="5dip"
                android:text="@string/person_account_pay_gold_coins_hint"
                android:layout_toRightOf="@id/person_account_pay_gold_coins_img"
                android:textColor="#ffffff"
                android:textSize="14sp"
             	/>
         </RelativeLayout>	   
</RelativeLayout>
