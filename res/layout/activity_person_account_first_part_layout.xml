<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:background="@null"
	    android:id="@+id/main_home_personal_home_page_layout_content"
    	xmlns:app="http://schemas.android.com/apk/res/com.xiaohong.kulian">
    	<!-- 图片部分信息 -->
    	<com.xiaohong.kulian.common.widget.RoundImageView 
    	    android:id="@+id/person_account_headimg_bg"
    	    android:layout_width="fill_parent"
    	    android:layout_height="156dip"
    	    android:src="@drawable/account"
    	    android:background="#d3d3d3"
		   	app:borderRadius="0dip"
		   	app:type="round"
    	    />
    	<!--  
	        <com.xiaohong.kulian.common.widget.RoundImageView 
	            android:id="@+id/main_home_person_center_home_page_background_img"
		   	    android:layout_width="fill_parent"
		   	    android:layout_height="156dip"
		   	    android:src="@null"
		   	    android:background="#d3d3d3"
		   	    app:borderRadius="0dip"
		   	    app:type="round"
		   	    />
		 -->
	        <TextView
				    android:id="@+id/main_home_person_center_home_page_background_text"
				    android:layout_width="fill_parent"
		   	    	android:layout_height="156dip"
				    android:textSize="18sp"				   	
				    android:gravity="center"
				    android:textColor="#ffffff"
				 	/>
	        <RelativeLayout 
	            android:id="@+id/person_account_headimg_img_layout"
		        android:layout_width="50dip"
				android:layout_height="50dip"
				android:layout_marginLeft="10dip"
				
				android:layout_below="@+id/person_account_headimg_bg"
				android:layout_marginTop="-40dip"
			    android:orientation="vertical"
		        >
		        <com.xiaohong.kulian.common.widget.RoundImageView 
		            android:id="@+id/person_account_headimg_img"
		            android:layout_width="50dip"
		            android:layout_height="50dip"
		            android:padding="5dip"
		            android:layout_centerInParent="true"
		            android:src="@drawable/account"
		            app:type="circle"
		            />
		        <!--  
			   	<com.xiaohong.kulian.common.widget.RoundImageView 
			   	    android:id="@+id/main_home_person_center_home_page_head_img"
			   	    android:layout_width="50dip"
			   	    android:layout_height="50dip"
			   	    android:padding="5dip"
			   	    android:layout_centerInParent="true"
			   	    android:src="@drawable/home_login_button_bg"
			   	    app:type="circle"
			   	    />
			   	    -->
		   	</RelativeLayout> 
		   	<TextView
				    android:id="@+id/main_home_person_center_home_page_nickname"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textSize="14sp"
				    android:text="@string/person_account_hint_name"
				    android:layout_marginLeft="5dip"
				    android:gravity="center_vertical"
				    android:layout_marginTop="-25dip"
				    android:layout_below="@+id/person_account_headimg_bg"
				    android:layout_centerInParent="true"
				    android:textColor="#000000"
				    android:singleLine="true"
    	        	android:ellipsize="end"
    	        	android:layout_toRightOf="@+id/person_account_headimg_img_layout"
				 	/>     	
 </RelativeLayout>
