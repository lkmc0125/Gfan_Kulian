<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    >
    <LinearLayout 
        android:id="@+id/layout_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="75dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="50dip"
        android:orientation="vertical"
        android:background="@drawable/help_first_page_bg"
        >
		<TextView 
		    android:layout_marginTop="17dip"
        	android:layout_marginLeft="20dip"
        	android:layout_marginRight="20dip"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="18sp"
        	android:text="@string/help_fouth_page_title_info"
        	android:drawableLeft="@drawable/titleno4"
        	android:drawablePadding="5dip"
        	android:gravity="center_vertical"
		    />
		<TextView 
		    android:layout_marginTop="20dip"
        	android:layout_marginLeft="20dip"
        	android:layout_marginRight="20dip"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="14sp"
        	android:lineSpacingMultiplier="1.2"
        	android:text="@string/help_fouth_page_content_info01"
		    />
		<LinearLayout 
		    android:layout_marginTop="5dip"
        	android:layout_marginLeft="20dip"
        	android:layout_marginRight="20dip"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:padding="5dip"
        	android:orientation="vertical"
        	android:background="@drawable/help_first_page_img_bg"
		    >
		    <ImageView 
		        android:contentDescription="@null"
		        android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:src="@drawable/no4pic_1"
		        />
		    
		</LinearLayout>
		<TextView 
		    android:layout_marginTop="20dip"
        	android:layout_marginLeft="20dip"
        	android:layout_marginRight="20dip"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="14sp"
        	android:lineSpacingMultiplier="1.2"
        	android:text="@string/help_fouth_page_content_info02"
		    />
		<LinearLayout 
		    android:layout_marginTop="5dip"
        	android:layout_marginLeft="20dip"
        	android:layout_marginRight="20dip"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:padding="5dip"
        	android:orientation="vertical"
        	android:background="@drawable/help_first_page_img_bg"
		    >
		    <ImageView 
		        android:contentDescription="@null"
		        android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:src="@drawable/no4pic_2"
		        />
		    
		</LinearLayout>
		<TextView 
		    android:layout_marginTop="20dip"
        	android:layout_marginLeft="20dip"
        	android:layout_marginRight="20dip"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="14sp"
        	android:lineSpacingMultiplier="1.2"
        	android:text="@string/help_fouth_page_content_info03"
		    />
		<LinearLayout 
		    android:layout_marginTop="5dip"
        	android:layout_marginLeft="20dip"
        	android:layout_marginRight="20dip"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:padding="5dip"
        	android:orientation="vertical"
        	android:background="@drawable/help_first_page_img_bg"
		    >
		    <ImageView 
		        android:contentDescription="@null"
		        android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:src="@drawable/no4pic_3"
		        />
		    
		</LinearLayout>
        
        
    </LinearLayout>
    <ImageView 
        android:contentDescription="@null"
        android:id="@+id/ImageView_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dip"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dip"
        android:src="@drawable/closeicon"
        />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@id/layout_content"
        android:layout_marginTop="-40dip"
        
        >
		<ImageView 
        android:id="@+id/image01"
        android:contentDescription="@null"
        android:layout_width="8dip"
        android:layout_height="8dip"
        android:layout_margin="2dip"
        android:src="@drawable/help_shape_circle_dot_white"       
        />
		<ImageView 
        android:id="@+id/image02"
        android:contentDescription="@null"
        android:layout_width="8dip"
        android:layout_height="8dip"
        android:layout_margin="2dip"
        android:src="@drawable/help_shape_circle_dot_white"      
        />
		<ImageView 
        android:id="@+id/image03"
        android:contentDescription="@null"
        android:layout_width="8dip"
        android:layout_height="8dip"
        android:layout_margin="2dip"
        android:src="@drawable/help_shape_circle_dot_white"      
        />
		<ImageView 
        android:id="@+id/image04"
        android:contentDescription="@null"
        android:layout_width="8dip"
        android:layout_height="8dip"
        android:layout_margin="2dip"
        android:src="@drawable/help_shape_circle_dot_blue"       
        />
        <ImageView 
        android:id="@+id/image05"
        android:contentDescription="@null"
        android:layout_width="8dip"
        android:layout_height="8dip"
        android:layout_margin="2dip"
        android:src="@drawable/help_shape_circle_dot_white"       
        />
    </LinearLayout>
    

</RelativeLayout>
