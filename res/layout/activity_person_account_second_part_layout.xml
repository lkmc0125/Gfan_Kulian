<?xml version="1.0" encoding="utf-8"?>
<!-- added by albert liu 2016-3-27 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_person_center_home_page_certification_mark_layout"
    android:layout_width="fill_parent"
    android:layout_height="75dip"
    android:background="@drawable/app_task_item_bg_with_shadow"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/sign_in_layout"
        android:layout_width="0dip"
        android:layout_height="75dip"
        android:layout_weight="1.4"
        android:background="@null"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sign_in_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dip"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/person_account_sign_in_value"
            android:textColor="#A5A5A5"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_in_value_text"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:background="@null"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/sign_in_icon"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/calendar"
                android:contentDescription="@null"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/sign_in_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="0dip"
                android:layout_toRightOf="@id/sign_in_icon"
                android:gravity="center"
                android:text="@string/person_account_sign_in_hint"
                android:textColor="#2C78D4"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/divid_line"
        android:layout_width="1dip"
        android:layout_height="45dip"
        android:layout_margin="15dip"
        android:layout_toRightOf="@id/sign_in_layout"
        android:background="#e8e8e8"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/gold_coins_layout"
        android:layout_width="0dip"
        android:layout_height="75dip"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/coin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/person_account_gold_coins_hint"
            android:textColor="#333333"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/coin_icon"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_alignBottom="@id/coin_text"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/coin_text"
            android:background="@drawable/goldcoin_small"
            android:contentDescription="@null"
            android:gravity="center_horizontal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buy_layout"
        android:layout_width="0dp"
        android:layout_height="75dip"
        android:layout_weight="1.3"
        android:background="@null"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/buy_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#2C78D4"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/buy_btn_icon"
                android:layout_width="12dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/but_purchase"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/buy_btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/buy_btn_icon"
                android:text="@string/person_account_pay_gold_coins_hint"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>