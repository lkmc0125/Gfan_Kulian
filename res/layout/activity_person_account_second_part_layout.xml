<?xml version="1.0" encoding="utf-8"?>
<!-- added by albert liu 2016-3-27 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	    	android:id="@+id/main_person_center_home_page_certification_mark_layout"
	        android:layout_width="fill_parent"
			android:layout_height="55dip"
		    android:orientation="horizontal"
		    android:background="@null"
		    android:baselineAligned="false"
	        >
	     <RelativeLayout 
			android:id="@+id/person_account_sign_in_layout" 
            android:layout_width="0dip" 
            android:layout_height="50dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:orientation="vertical"
            >
            <RelativeLayout 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@null"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/person_account_sign_in_img" 
                android:layout_marginTop="4dip"
                android:contentDescription="@null"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="5dip"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:background="@drawable/calendar"
                />
           <TextView 
               android:id="@+id/person_account_sign_in_text"
               android:layout_marginTop="4dip"
               android:layout_width="wrap_content"
               android:layout_height="25dip"
               android:gravity="center"
               android:layout_marginLeft="5dip"
               android:layout_gravity="center"
               android:layout_toRightOf="@id/person_account_sign_in_img"
               android:text="@string/person_account_sign_in_hint"
               android:textColor="#000000"
               android:textSize="14sp"
               />
           <TextView 
               android:id="@+id/person_account_sign_in_value_text"
               android:layout_width="wrap_content"
               android:layout_height="25dip"
               android:gravity="center"
               android:layout_gravity="center"
               android:layout_marginLeft="5dip"
               android:layout_below="@id/person_account_sign_in_img"
               android:text="@string/person_account_sign_in_value"
               android:layout_centerInParent="true"
               android:textColor="#000000"
               android:textSize="14sp"
               />
            </RelativeLayout>
         </RelativeLayout>
         <RelativeLayout 
			android:id="@+id/person_account_gold_coins_layout" 
            android:layout_width="0dip" 
            android:layout_height="50dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:orientation="vertical"
            >
           <TextView
                android:id="@+id/main_home_person_center_coin_text" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="@string/person_account_gold_coins_hint"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:textSize="22sp"
                android:layout_marginBottom="4dip"
             	/>
			<ImageView
			    android:id="@+id/main_home_person_center_coin_img"
                android:layout_marginTop="4dip"
                android:contentDescription="@null"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/main_home_person_center_coin_text"
                android:layout_marginLeft="5dip"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/goldcoin_small"
                />

         </RelativeLayout>
         <RelativeLayout 
			android:id="@+id/person_account_pay_gold_coins_layout" 
            android:layout_width="0dip" 
            android:layout_marginTop="10dip"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:background="#0000ff"
            android:orientation="horizontal"
            >
			<ImageView
			    android:id="@+id/person_account_pay_gold_coins_img"
                android:layout_marginTop="4dip"
                android:contentDescription="@null"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/but_purchase"
                />
             <TextView
                android:id="@+id/person_account_pay_gold_coins_text"
                android:layout_marginTop="4dip"
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="@string/person_account_pay_gold_coins_hint"
                android:layout_toRightOf="@id/person_account_pay_gold_coins_img"
                android:textColor="#ffffff"
                android:textSize="14sp"
             	/>
         </RelativeLayout>	   
</LinearLayout>
