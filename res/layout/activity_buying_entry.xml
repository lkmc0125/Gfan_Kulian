<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <include android:id="@+id/top_bar" 
        layout="@layout/top_bar" />
    
    <RelativeLayout
        android:id="@+id/own_buy"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/app_task_item_bg_with_shadow"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/own_buy_icon"
            android:layout_width="13dip"
            android:layout_height="13dip"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/task_icon_gray"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/own_buy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/own_buy_icon"
            android:text="我要充值"
            android:textColor="#595959"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/own_buy_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center"
            android:layout_marginRight="15dip"
            android:text="给自己账户充值"
            android:textColor="#808080"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buy_for_other"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/app_task_item_bg_with_shadow"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/buy_for_other_icon"
            android:layout_width="13dip"
            android:layout_height="13dip"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/info_icon"
            android:contentDescription="@null"
            android:textColor="#00ffff" />

        <TextView
            android:id="@+id/buy_for_other_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/buy_for_other_icon"
            android:text="帮别人付"
            android:textColor="#595959"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/buy_for_other_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center"
            android:layout_marginRight="15dip"
            android:text="帮别人的账户充值"
            android:textColor="#808080"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ask_buy"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/app_task_item_bg_with_shadow"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ask_buy_icon"
            android:layout_width="13dip"
            android:layout_height="13dip"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/faq_icon"
            android:contentDescription="@null"
            android:textColor="#00ffff" />

        <TextView
            android:id="@+id/ask_buy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/ask_buy_icon"
            android:text="找人代付"
            android:textColor="#595959"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ask_buy_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center"
            android:layout_marginRight="15dip"
            android:text="邀请别人给你充值"
            android:textColor="#808080"
            android:textSize="12sp" />
        
        
    </RelativeLayout>

</LinearLayout>