<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_bar"
        layout="@layout/top_bar" />
    
    <TextView
        android:id="@+id/buy_message_push_coin_text"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:gravity="center|left"
        android:text="@string/buy_message_push_coin"
        android:background="@drawable/app_task_item_bg_with_shadow"
        android:textColor="#a5a5a5"
        android:textSize="12sp" />
	
    <RelativeLayout
        android:id="@+id/own_buy"
        android:layout_width="fill_parent"
        android:layout_height="90dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/app_task_item_bg_with_shadow"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/own_buy_icon"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dip"
            android:background="@drawable/buyicon1"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@+id/own_buy_icon"
            android:background="@null"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/own_buy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text="我要充值"
                android:textColor="#595959"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/own_buy_hint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginTop="12dip"
                android:text="给自己账户充值"
                android:textColor="#808080"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/own_buy_next_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/arrow"
            android:contentDescription="@null" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buy_for_other"
        android:layout_width="fill_parent"
        android:layout_height="90dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/app_task_item_bg_with_shadow"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/buy_for_other_icon"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dip"
            android:background="@drawable/buyicon2"
            android:contentDescription="@null"
            android:textColor="#00ffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@+id/buy_for_other_icon"
            android:background="@null"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/buy_for_other_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text="帮人充值"
                android:textColor="#595959"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/buy_for_other_hint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginTop="12dip"
                android:text="帮别人的账户充值"
                android:textColor="#808080"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/buy_for_other_next_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/arrow"
            android:contentDescription="@null" />
    </RelativeLayout>
