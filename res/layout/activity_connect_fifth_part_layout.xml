<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical" >

    <!-- humor section -->
    <RelativeLayout
        android:id="@+id/connection_recommend_humor_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <RelativeLayout
            android:id="@+id/humor_title"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@null"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/connection_recommend_humor_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="@string/connection_recommend_humor"
                android:textColor="#333333"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/connection_recommend_humor_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/arrow"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/connection_recommend_all_humor_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="left|center"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="5dip"
                android:layout_toLeftOf="@+id/connection_recommend_humor_img"
                android:text="@string/connection_recommend_all_task"
                android:textColor="#939393"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@id/humor_title"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#99bcbcbc" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:minHeight="30dp"
            android:text="@string/connection_recommend_humor_describtion"
            android:textAppearance="@style/app_text_style2" />
    </RelativeLayout>

</RelativeLayout>