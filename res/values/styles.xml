<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="app_name_white_font">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_l</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="splash_text">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_s</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="app_description_font">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_s</item>
        <item name="android:textColor">@color/vertical_splitter_color</item>
    </style>

    <!-- ProgressBar for notification item -->
    <style name="progressbar_horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minHeight">10.5dip</item>
        <item name="android:maxHeight">10.5dip</item>
    </style>

    <style name="Theme.CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Toast Text Style -->
    <style name="toast_text">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_s</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 顶部蓝标题 -->
    <style name="topbar_title">
        <item name="android:textSize">21.5sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- 热词中字体样式 -->
    <style name="hot_font">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- 应用标题 -->
    <style name="app_title">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>


    <style name="app_category">
        <item name="android:paddingTop">9.4dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- 应用的价格 -->
    <style name="app_price">
        <item name="android:layout_marginTop">2.6dp</item>
        <item name="android:layout_marginBottom">2.6dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 应用的icon -->
    <style name="app_logo">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- 应用下载按钮 -->
    <style name="app_download">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- 分隔符 -->
    <style name="app_devider">
        <item name="android:layout_width">0.8dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">#DCDCDC</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">48dp</item>
    </style>

    <!-- 安装包管理 -->
    <style name="manager_apk_icon">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- 定义各式的字体样式 -->
    <!-- app_title -->
    <style name="app_text_style1">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!-- app_category -->
    <style name="app_text_style2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#595959</item>
    </style>

    <!-- app_price and app_size -->
    <style name="app_text_style3">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#A5A5A5</item>
    </style>

    <!-- rank_tab_text -->
    <style name="app_text_style4">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/make_money_tab_text_selector</item>
    </style>

    <!-- app_tab_text -->
    <style name="app_text_style5">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#9A9A9A</item>
    </style>

    <style name="app_text_stlye6">
        <item name="android:textSize">10.6sp</item>
        <item name="android:textColor">@color/tab_app_num</item>
    </style>

    <!-- search_autoText_list_item -->
    <style name="app_text_style7">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="app_text_stlye8">
        <item name="android:textSize">18.6sp</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>

    <style name="app_text_style9">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="app_text_style10">
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="app_text_style11">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>

    <!-- app list and task list action -->
    <style name="app_text_style12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#2c78d4</item>
    </style>
    
    <style name="comment_author_font">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_s</item>
        <item name="android:textColor">@color/hot3</item>
    </style>

    <style name="comment_font">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_m</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="info_font">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_m</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 个人中心 -->
    <style name="personal_account_icon">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="personal_account_name">
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="personal_account_desc">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>


    <style name="list_font_s_normal">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_s</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>

    <style name="list_font_m_normal">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_m</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>

    <style name="list_font_l_normal">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_l</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="comment_time_font">
        <item name="android:textSize">@dimen/font_size_s</item>
        <item name="android:textColor">@color/comment_time_font_color</item>
    </style>

    <!-- begin of custum alertDialog --> 
    <style name="text_15_595959">  
        <item name="android:textSize">15.0dip</item>  
        <item name="android:textColor">#595959</item>  
    </style>  
  
    <style name="sdw_white">  
        <item name="android:shadowColor">#7fffffff</item>  
        <item name="android:shadowDx">0.0</item>  
        <item name="android:shadowDy">0.65</item>  
        <item name="android:shadowRadius">1.0</item>  
    </style>  
  
    <style name="sdw_79351b">  
        <item name="android:shadowColor">#ff79351b</item>  
        <item name="android:shadowDx">0.0</item>  
        <item name="android:shadowDy">1.0</item>  
        <item name="android:shadowRadius">1.0</item>  
    </style>  
  
    <style name="text_15_ffffff_sdw" parent="@style/sdw_79351b">  
        <item name="android:textSize">15.0dip</item>  
        <item name="android:textColor">#ffffffff</item>  
    </style>  
  
    <style name="text_15_666666_sdw" parent="@style/sdw_white">  
        <item name="android:textSize">15.0dip</item>  
        <item name="android:textColor">#ff666666</item>  
    </style>  
  
    <style name="Dialog" parent="android:style/Theme.Dialog">  
        <item name="android:background">#00000000</item>  
        <item name="android:windowBackground">@android:color/transparent</item>  
        <item name="android:windowNoTitle">true</item>  
        <item name="android:windowIsFloating">true</item>  
    </style>  
    <!-- end of custum alertDialog -->
    <!-- 首页文字style -->
    <style name="connect_dialog_title_ffffff">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="connect_dialog_content_595959">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#595959</item>
    </style>
    <style name="connect_dialog_positive_595959">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#2c78d4</item>
    </style>
    <style name="connect_dialog_negative_a5a5a5">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#a5a5a5</item>
    </style>
</resources>
